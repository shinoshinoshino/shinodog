<h3>ログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p><%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></p>
  </div>

  <div class="field">
    <p><%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></p>
  </div>

  <!--<% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>-->

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn-primary' %>
  </div>

  <div class="return">
    <a><%= link_to 'もどる', "/", class: "square_btn" %></a>
  </div>

<% end %>

