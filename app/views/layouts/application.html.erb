<!DOCTYPE html>
<html>
  <head>
    <title>Mydog2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">-->
  </head>

  <body class="layout">

    <!--<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>-->

    <!--<ul class="header_grobal">
      <li class="signup"><%= link_to "新規登録(無料)", new_user_registration_path %></li>
      <li class="login"><%= link_to "ログイン", new_user_session_path %></li>
    </ul>/-->


    <% if user_signed_in? %>
    <div class="cursor">
      <ul class="header_grobal">
        <li class="login"><a href="#"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
      <div class="wrap">
        <div class="header_main">
          <%= image_tag 'dog_footprint-blackwhite.png', :size => '30x30' %><%=link_to 'わんちゃん健康手帳', "/" %>
        </div>
      </div>

      <p class="name"><i class="fas fa-dog fa-3x"></i>ようこそ<%= current_user.nickname %>さん</p>

      <!--<%= link_to 'アカウント変更', edit_user_registration_path %>-->


    <% else %>

    <ul class="header_grobal">
      <li class="signup"><a href="#"><%= link_to "新規登録(無料)", new_user_registration_path %></li>
      <li class="login"><a href="#"><%= link_to "ログイン", new_user_session_path %></li>
    </ul>

    <div class="wrap">
      <div class="header_main">
        <%= image_tag 'dog_footprint-blackwhite.png', :size => '30x30' %><%=link_to 'わんちゃん健康手帳', "/" %>
      </div>
    </div>

    <% end %>

    <%= yield %>

    <!--<div class="footer"></div>-->

  </body>
</html>
